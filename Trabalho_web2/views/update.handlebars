<form name="form1" action="/controllerUpdate" method="post">

    <div class="field">
        <input type="hidden" id="id" name="id" placeholder="Digite o id" value="{{id}}">
    </div>
    <div class="field">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Digite seu nome" value="{{name}}">
    </div>
    <div class="field">
        <label for="description">Sua Tarefa:</label>
        <input type="text" name="description" id="description" placeholder="Description:" value="{{description}}">
    </div>
    <div class="field">
        <label for="start_date">Data inicial:</label>
        <input type="text" name="start_date" start_date="start_date" placeholder="Start_date:" value="{{start_date}}">
    </div>
    <div class="field">
        <label for="end_date">Data Final:</label>
        <input type="text" name="end_date" id="end_date" placeholder="End_date:" value="{{end_date}}"><br>
    </div>
    <div class="field radiobox">
        <span>Prioridade</span>
        <input type="radio" name="priority" id="sim" value="Normal" ><label for="Normal">Normal</label>
        <input type="radio" name="priority" id="nao" value="Urgente"><label for="Urgente">Urgente</label>
    </div>

    <input type="submit" name="btnSubmit" id="btnSubmit" value="Alterar"><br>
</form>